<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbarAlwaysDrawVerticalTrack="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/breakwificontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请选择信号进行破解：\n" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <com.jhj.dev.wifi.server.material.ButtonFlat
            android:id="@+id/selectwifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择wifi信号" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.jhj.dev.wifi.server.material.ButtonFlat
            android:id="@+id/breakwifilist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:text="破解列表" >
        </com.jhj.dev.wifi.server.material.ButtonFlat>

        <com.jhj.dev.wifi.server.material.ButtonFlat
            android:id="@+id/startbreakwifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/layout"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:text="开始破解" >
        </com.jhj.dev.wifi.server.material.ButtonFlat>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/startbreakwifi"
            android:orientation="horizontal" >

            <com.jhj.dev.wifi.server.material.CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </com.jhj.dev.wifi.server.material.CheckBox>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="自动破解" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout><!-- From: file:/C:/Users/HJ/Desktop/WiFiTool/app/src/main/res/layout/activity_break_wifi.xml -->