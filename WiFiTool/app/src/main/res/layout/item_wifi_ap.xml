            android:textStyle="normal"
            android:typeface="normal"/>

        <com.jhj.dev.wifi.server.wifiaplist.WifiAPListItemRSSIView
            android:id="@+id/wifiAPListItemRSSIView"
            android:layout_width="@dimen/ap_list_item_rssi_Strip_width"
            android:layout_height="@dimen/ap_list_item_rssi_Strip_height"
            android:focusable="false"/>

        <TextView
            android:id="@+id/tv_ap_organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:singleLine="true"
